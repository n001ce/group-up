<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<div id="lfg">
  <div class="padding">
    <h2 class="text-align-center">LOOK FOR GROUP</h2>
    <div class="container" id="lfgForm">
      <form id="new-form" action="/posts" method="POST" >
        <div class="row">
          <div class="col-sm-12 form-group">
            <div class="box">
            <label for="title-input">Title: </label>
            <input type="text" id="title-input" name="title">
            </div>
            <div class="box">
            <label for="queue-input">QUEUE</label>
            <select class="form-select align-items-center justify-content-between" id="exampleFormControlSelect2" name="queue">
              <option value="Competitive">Competitive</option>
              <option value="QuickPlay">Quick Play</option>
            </select></div>
            <div class="box">
            <label for="eroles-input">Enforced Roles</label><br>
            <input type="checkbox" name="eroles" checked id ="eroles-checkbox" value="eroles">Yes/No<br>
            </div>
            <h1>Hero Slots</h1><br>
            <div class="box" id="heroSlots">
              <label for="support1-input">
                <img src="/images/pages/New_Support_Icon.png" width="50" alt="">
                <input type="checkbox" name="support1" checked id="support1-checkbox" value="support1"><br>
              </label>
              <label for="support2-input">
                <img src="/images/pages/New_Support_Icon.png" width="30" alt="">
                <input type="checkbox" name="support2" checked id="support2-checkbox" value="support2"><br>
              </label>  
              <label for="dps1-input">
                <img src="/images/pages/New_Damage_Icon.png" width="50" alt="">
                <input type="checkbox" name="dps1" checked id="dps1-checkbox" value="dps1"><br>
              </label>
              <label for="dps2-input">
                <img src="/images/pages/New_Damage_Icon.png" width="50" alt="">
                <input type="checkbox" name="dps2" checked id="dps2-checkbox" value="dps2"><br>
              </label>
              <label for="tank1-input">
                <img src="/images/pages/New_Tank_Icon.png" width="50" alt="">
                <input type="checkbox" name="tank1" checked id="tank1-checkbox" value="tank1"><br>
              </label>
              <label for="tank2-input">
                <img src="/images/pages/New_Tank_Icon.png" width="50" alt="">
                <input type="checkbox" name="tank2" checked id="tank2-checkbox" value="tank2"><br>
              </label
            </div>
            </div>
        </div>
        <button type="submit">Add Post</button>
      </form>
    </div>
  </div>
</div>

