<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>


<main>
  <section class="bg-dark text-secondary px-4">
    <h1 class="display-5 fw-bold text-white pt-2 text-center">
      <%= apiResult.data.platformInfo.platformUserId %>
    </h1>
    <div class="container py-4">
      <h4 class="display-5 fw-bold text-white pt-2 text-center">
          <%= apiResult.data.metadata.lastUpdated.value %> 
      </h4>
      <div class="accordion" id="accordion">
        <div class="accordion-item bg-dark">
          <h2 class="accordion-header" id="headingOne">
            <button 
              class="accordion-button bg-dark text-light" 
              type="button" 
              data-bs-toggle="collapse" 
              data-bs-target="#collapseOne" 
              aria-expanded="true" 
              aria-controls="collapseOne"
            >
              Player Stats
            </button>
      <p class="mt-4 fs-4 text-light">Time Played: <%= apiResult.segments.attributes.realm%></p>
      
    </div>
  </section>
</main>

<%- include('../partials/footer') %>