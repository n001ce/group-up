<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<div id="home">
  <div class="padding">
  <main>
   
  <%# Add the action below as the update UI %> 
  <form 
    class="container d-flex flex-column align-items-center"
    action="/profile/<%= profile._id %>?_method=PUT"
    method="POST"
    id="editProfile"
  >
  <h1 class="text-align-center" id="owfont">EDIT PROFILE</h1>
    <div class="mb-3 w-75" id="profile-input">
      <label for="name-input" class="form-label">Name</label>
      <input 
        type="text"
        class="form-control"
        id="name-input"
        name="name"
        value="<%= profile.name %>"
      >
    </div>
    <div class="mb-3 w-75" id="profile-input">
      <label for="avatar-input" class="form-label">Avatar</label>
      <input 
        type="url" 
        class="form-control" 
        id="avatar-input"
        name="avatar"
        value="<%= profile.avatar %>"
      >
    </div>
    <div class="mb-3 w-75" id="profile-input">
        <label for="gamerTag-input" class="form-label">Gamer Tag</label>
        <input 
          type="text" 
          class="form-control" 
          id="gamerTag-input"
          name="gamerTag"
          value="<%= profile.gamerTag %>"
        >
      </div>
      <div class="mb-3 w-75" id="profile-input">
        <label for="platform-input" class="form-label">Platform</label>
        <select 
          class="form-control" 
          id="avatar-input"
          name="platform"
          value="<%= profile.platform %>"
        >
        <option value="xbl">XBL</option>
        <option value="psn">PSN</option>
        <option value="pc">PC</option>
      </select>
      </div>
      <div class="mb-3 w-75" id="profile-input">
        <label for="roleSelect-input" class="form-label">Role</label>
        <select 
          class="form-control" 
          id="roleSelect-input"
          name="roleSelect"
          value="<%= profile.role %>"
        >
        <option value="support">Support</option>
        <option value="dps">DPS</option>
        <option value="tank">Tank</option>
      </select>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>
</div>
</div>

<%- include('../partials/footer') %>