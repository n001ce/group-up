<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>

<main>
  <%# Add the action below as the update UI %> 
  <form 
    class="container d-flex flex-column align-items-center"
    action="/profile/<%= profile._id %>?_method=PUT"
    method="POST"
  >
    <div class="mb-3 w-75">
      <label for="name-input" class="form-label">Name</label>
      <input 
        type="text"
        class="form-control"
        id="name-input"
        name="name"
        value="<%= profile.name %>"
      >
    </div>
    <div class="mb-3 w-75">
      <label for="avatar-input" class="form-label">Avatar</label>
      <input 
        type="url" 
        class="form-control" 
        id="avatar-input"
        name="avatar"
        value="<%= profile.avatar %>"
      >
    </div>
    <div class="mb-3 w-75">
        <label for="gamerTag-input" class="form-label">Gamer Tag</label>
        <input 
          type="text" 
          class="form-control" 
          id="gamerTag-input"
          name="gamerTag"
          value="<%= profile.gamerTag %>"
        >
      </div>
      <div class="mb-3 w-75">
        <label for="platform-input" class="form-label">Platform</label>
        <select 
          class="form-control" 
          id="avatar-input"
          name="platform"
          value="<%= profile.platform %>"
        >
        <option value="xbl">XBL</option>
        <option value="psn">PSN</option>
        <option value="pc">PC</option>
      </select>
      </div>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
</main>

<%- include('../partials/footer') %>